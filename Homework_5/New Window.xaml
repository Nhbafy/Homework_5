        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_5"
        mc:Ignorable="d"
        Title="New_Window" Height="300" Width="426.786">
    <Grid Margin="0,0,0,50">
        <TextBox x:Name="FirstNameTB" HorizontalAlignment="Left" Margin="122,24,0,0" TextWrapping="Wrap" Text="TextBox" Width="252" TextChanged="FirstNameTB_TextChanged" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="SecondNameTB" Margin="122,74,45,114" TextWrapping="Wrap" Text="TextBox" TextChanged="FirstNameTB_TextChanged"/>
        <TextBox x:Name="DepartmentTB" HorizontalAlignment="Left" Margin="122,127,0,26" TextWrapping="Wrap" Text="TextBox" Width="252" TextChanged="FirstNameTB_TextChanged" RenderTransformOrigin="1.029,1.734"/>
