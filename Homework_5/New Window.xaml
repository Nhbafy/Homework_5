        <Label x:Name="SecondNameLabel" Content="Фамилия" Margin="35,74,313,114" />
        <Label x:Name="DepartmentLabel" Content="Департамент" HorizontalAlignment="Left" Margin="35,140,0,0" VerticalAlignment="Top" Height="30"/>
        <Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" Height="29" Margin="37,224,0,-34" VerticalAlignment="Top" Width="80" Click="SaveButton_Click"/>
        <Button Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Height="29" Margin="311,224,0,-34" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.08,0.086" Click="CancelButton_Click"/>

    </Grid>
</Window>
