<Window x:Class="Homework_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="432.069" Width="697.348">
    <Grid>
        <Button x:Name="EditButton" Content="Редактировать" HorizontalAlignment="Left" Margin="48,346,0,0" VerticalAlignment="Top" Width="102" Click="EditButton_Click" Visibility="Visible"/>

        <ListView x:Name="ViewEmployee"   HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="669"   SelectionChanged = "ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="350" DisplayMemberBinding="{Binding Path=FullName}">Сотрудник</GridViewColumn>
                    <GridViewColumn  Width="350" DisplayMemberBinding="{Binding Path=Department}">Департамент</GridViewColumn>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="NewButton" Content="Добавить" HorizontalAlignment="Left" Margin="500,346,0,0" VerticalAlignment="Top" Width="75" Click="NewButton_Click"/>
    </Grid>
</Window>
